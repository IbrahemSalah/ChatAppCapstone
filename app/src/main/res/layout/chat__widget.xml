<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/WidgetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="@dimen/widget_margin">


    <TextView
        android:id="@+id/firstUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:text="@string/empty_string"
        android:textStyle="bold"
        android:textColor="@color/colorTitle"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/firstUserText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/firstUser"
        android:layout_alignStart="@+id/firstUser"
        android:layout_below="@+id/firstUser"
        android:layout_marginTop="22dp"
        android:textColor="@color/colorTitle"
        android:text="@string/empty_string" />

    <TextView
        android:id="@+id/secondUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="@string/empty_string"
        android:textStyle="bold"
        android:textColor="@color/colorTitle"
        android:layout_below="@+id/firstUserText"
        android:layout_alignLeft="@+id/firstUserText"
        android:layout_alignStart="@+id/firstUserText" />

    <TextView
        android:id="@+id/secondUserText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/secondUser"
        android:textColor="@color/colorTitle"
        android:layout_alignStart="@+id/secondUser"
        android:layout_below="@+id/secondUser"
        android:layout_marginTop="26dp"
        android:text="@string/empty_string" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorTitle"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="@string/app_name" />
</RelativeLayout>